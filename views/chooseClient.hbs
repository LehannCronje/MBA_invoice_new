<div class="container-fluid login-container d-flex align-items-center justify-content-center">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="login-wrapper col-12">
            <h1>Client and Supplier</h1>
            <div class="form-wrapper">
                <form action="/invoice" method="post">
                <div>
                    <label for="SupSelect">Supplier:</label>
                    <select name="sup" id="SupSelect">
                        <option value="{{sup}}">{{sup}}</option>
                    </select>
                </div>
                <div>
                    <label for="clientSelect">Client:</label>
                    <select name="client" id="clientSelect">
                        <option value="{{client}}">{{client}}</option>
                    </select>
                </div>
                    <input type="submit">
                </form>
            </div>
        </div>
    </div>
</div>


